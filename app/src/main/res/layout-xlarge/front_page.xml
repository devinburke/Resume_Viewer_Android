<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frontpagelayout"
    android:background="@drawable/lg"

 >


    <Button
        android:id="@+id/bsq"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:textSize = "80sp"
        android:text="@string/sq"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:layout_marginTop="205dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btq"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:textSize = "80sp"
        android:text= "@string/tq"
        android:layout_marginTop="144dp"
        android:layout_below="@+id/bsq"
        android:layout_alignLeft="@+id/bsq"
        android:layout_alignStart="@+id/bsq" />
    <Button
        android:id="@+id/other"
        android:layout_width="500dp"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:layout_height="100dp"
        android:textSize = "50sp"
        android:text= "@string/seeother"
        android:layout_marginTop="113dp"
        android:layout_below="@+id/btq"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/rate"
        android:layout_width="500dp"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_height="100dp"
        android:textSize = "80sp"
        android:text= "@string/ra"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/other"
        android:layout_alignLeft="@+id/btq"
        android:layout_alignStart="@+id/btq" />



</RelativeLayout>
